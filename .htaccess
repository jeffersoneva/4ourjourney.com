RewriteEngine On

# ==================================================
# FOR√áAR HTTPS (din√¢mico)
# ==================================================
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# ==================================================
# üî• URL AMIG√ÅVEL PARA EBOOK
# /ebook/nome-do-ebook
# ==================================================
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ebook/([a-zA-Z0-9_-]+)$ ebook/ebook.php?n=$1 [L,QSA]

# ==================================================
# REESCRITA AUTOM√ÅTICA PARA .php
# ==================================================
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.+)$ $1.php [L]

# ==================================================
# ERROR 404
# ==================================================
ErrorDocument 404 /404.php
